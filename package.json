{
  "name": "boilerplate",
  "version": "0.0.1",
  "description": "Boilerplate with Webpack and Babel",
  "author": "Daniel Johnson",
  "license": "none",
  "scripts": {
    "copy": "cpx './src/index.html' './dist'", 
    "copy:watch": "cpx './src/index.html' './dist' --watch", 
    "dev": "npm run copy && webpack --mode development",
    "build": "npm run copy && webpack --mode production",
    "watch": "npm run copy:watch & webpack --mode development --watch"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "copyfiles": "^2.0.0",
    "cpx": "^1.5.0",
    "css-loader": "^1.0.0",
    "less": "^3.7.1",
    "less-loader": "^4.1.0",
    "style-loader": "^0.21.0",
    "webpack": "^4.16.1",
    "webpack-cli": "^3.1.0",
    "webpack-command": "^0.4.1"
  }
}
